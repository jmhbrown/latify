<%= form_for :address, url: addresses_path do |f| %>
	<!-- Checks for a displays errors. -->
	<% if @address.errors.any? %>
		<div id="errorExplanation">
			<!--  @address.errors.count -->
		<p>Houston, we have <%= pluralize(@address.errors.count, "problem")%>. </p>
			<ul>
				<% @address.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!-- The form fields -->
	<p>
		<%= f.label :street_address %><br>
		<%= f.text_field :street_address %>
	</p>
	<p>
		<%= f.label :city %><br>
		<%= f.text_field :city %>
	</p>
	<p>
		<%= f.label :state %><br>
		<%= f.text_field :state %>
	</p>
	<p>
		<%= f.label :zip %><br>
		<%= f.text_field :zip %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
